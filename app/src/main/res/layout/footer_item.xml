<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/grid_view_item"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <ImageView
            android:id="@+id/footer_image1"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
<!--        <ImageView
            android:id="@+id/footer_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
    </RelativeLayout>
    <TextView
        android:textSize="15sp"
        android:id="@+id/footer_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" /> <TextView
        android:id="@+id/footer_text2"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:layout_weight="3"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/footer_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" /> <TextView
        android:id="@+id/footer_text4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
